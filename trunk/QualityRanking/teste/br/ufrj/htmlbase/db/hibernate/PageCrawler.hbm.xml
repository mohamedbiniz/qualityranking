<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

                            
                            
<hibernate-mapping package="br.ufrj.htmlbase">

    <class name="PageCrawler" table="PAGE_CRAWLER">
        <id name="id" column="ID" type="long">
            <generator class="assigned"/>
        </id>
 
 		<property name="idDataSet" column="IdDataSet" type="long" />
 		<property name="idPage" column="page_id" type="long" />
 		<property name="ordemDownload" column="ordem_download" type="long" />
        <property name="score" column="SCORE" type="double" />
        <property name="version" column="VERSION" type="long" />
        <property name="url" column="URL" type="java.lang.String" />
        <property name="content" column="CONTENT" type="java.lang.String" />
        <property name="pathPage" column="PATH_PAGE" type="java.lang.String" />
        <property name="dateCreate" column="DATE_CREATE" type="java.util.Date" />
        <property name="lastModified" column="LAST_MODIFIED" type="java.util.Date" />
       
        <!-- 
        <list name="links">
        	<key column="page_id" not-null="false"  />
        	<list-index column="indice" />
        	<one-to-many  class="br.ufrj.htmlbase.OutputLinkCrawler"/>
        </list>
        
         -->
    </class>
    
</hibernate-mapping>
                            
