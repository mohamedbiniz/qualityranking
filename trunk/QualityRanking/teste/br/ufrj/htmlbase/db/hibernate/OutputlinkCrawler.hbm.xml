<?xml version="1.0" encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
                            "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                            "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="br.ufrj.htmlbase">

    <class name="OutputLinkCrawler" table="OUTPUTLINK_CRAWLER">

		<id name="idTest" column="ID" type="long"/>
                   
        <!--
        <composite-id>
            <key-property name="idTest" column="ID" type="long" />            
        </composite-id>
         -->
        
        <property name="idPage" column="IdPagina" type="long"/>
        <property name="idDataSet" column="IdDataSet" type="long"/>
        <property name="score" column="SCORE" type="double" />
        <property name="url" column="URL" type="java.lang.String" />
        <property name="domain" column="DOMAIN" type="java.lang.String" />
        <property name="visited" column="VISITED" type="boolean" />
        <property name="seed" column="SEED" type="boolean" />
        <property name="dateCreate" column="DATE_CREATE" type="java.util.Date" />
        <property name="lastModified" column="LAST_MODIFIED" type="java.util.Date" />
        <property name="nextFetch" column="NEXT_FETCH" type="java.util.Date" />
          
        <many-to-one name="pageCrawler" class="br.ufrj.htmlbase.PageCrawler" 
         column="id_page_crawler" not-null="false" lazy="false" />
        
    </class>
    
</hibernate-mapping>
